<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_menu"
    android:orientation="vertical"
    tools:context=".activities.UploadActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="20dp"
        android:elevation="20dp"
        app:cardBackgroundColor="#88000000"
        app:cardCornerRadius="30dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/lavender_border"
            android:orientation="vertical"
            android:padding="20dp">

            <ImageView
                android:id="@+id/uploadImgage"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/baseline_list_alt_24" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Расписание"
                android:textAlignment="center"
                android:textColor="@color/lavender"
                android:textSize="30sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10sp"
                    android:text="10:00 - 12:00"
                    android:textColor="@color/lavender"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/EditMorning"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/lavender_border"
                    android:gravity="center_horizontal|center_vertical"
                    android:hint="Активность(-и)"
                    android:padding="1dp"
                    android:textColor="@color/lavender"
                    android:textColorHighlight="@color/lavender"
                    android:textColorHint="@color/lavender" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10sp"
                    android:text="16:00 - 18:00"
                    android:textColor="@color/lavender"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/EditMidDay"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/lavender_border"
                    android:gravity="center_horizontal|center_vertical"
                    android:hint="Активность(-и)"
                    android:padding="1dp"
                    android:textColor="@color/lavender"
                    android:textColorHighlight="@color/lavender"
                    android:textColorHint="@color/lavender" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10sp"
                    android:text="20:00 - 22:00"
                    android:textColor="@color/lavender"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/EditEvening"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/lavender_border"
                    android:gravity="center_horizontal|center_vertical"
                    android:hint="Активность(-и)"
                    android:padding="1dp"
                    android:textColor="@color/lavender"
                    android:textColorHighlight="@color/lavender"
                    android:textColorHint="@color/lavender" />
            </LinearLayout>

            <Button
                android:id="@+id/saveButton"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/lavender_border"
                android:text="Сохранить"
                android:textSize="18sp"
                app:cornerRadius="20dp" />


        </LinearLayout>

    </androidx.cardview.widget.CardView>
</ScrollView>