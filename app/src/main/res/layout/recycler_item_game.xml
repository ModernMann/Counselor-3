<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/recCardGame"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="10dp"
    app:cardCornerRadius="20dp"
    android:elevation="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/recImageGame"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:padding="8dp"
            android:scaleType="centerCrop"
            android:src="@color/lavender"
            app:shapeAppearanceOverlay="@style/roundedImageViewRounded" />
        <TextView
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:id="@+id/recTitleGame"
            android:text="Имя"
            android:textColor="@color/lavender"
            android:textSize="20sp"
            android:layout_toEndOf="@id/recImageGame"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"/>
        <TextView
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:id="@+id/recTimeGame"
            android:text="Время"
            android:textColor="@color/lavender"
            android:textSize="16sp"
            android:layout_toEndOf="@id/recImageGame"
            android:layout_below="@+id/recYearGame"
            android:textAlignment="textStart"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"/>
        <TextView
            android:id="@+id/recTypeGame"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_below="@+id/recTitleGame"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@id/recImageGame"
            android:text="Тип"
            android:textAlignment="textStart"
            android:textColor="@color/lavender"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/recYearGame"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_below="@+id/recTypeGame"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@id/recImageGame"
            android:text="Возраст"
            android:textAlignment="textStart"
            android:textColor="@color/lavender"
            android:textSize="16sp" />
        <TextView
            android:layout_width="140dp"
            android:layout_height="12dp"
            android:id="@+id/recDescGame"
            android:text="Описание"
            android:textColor="@color/lavender"
            android:textSize="8sp"
            android:layout_toEndOf="@id/recImageGame"
            android:textAlignment="center"
            android:layout_below="@id/recTitleGame"
            android:maxLines="0"
            android:layout_marginStart="20dp"/>




    </RelativeLayout>

</androidx.cardview.widget.CardView>