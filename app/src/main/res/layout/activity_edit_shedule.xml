<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.UploadActivity"
    android:background="@drawable/backgrondimg">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        app:cardCornerRadius="30dp"
        android:elevation="20dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:padding="20dp"
            android:background="@drawable/lavender_border"
            >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:src="@drawable/baseline_list_alt_24"
                android:id="@+id/uploadImgage"
                android:layout_marginTop="10dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Расписание"
                android:textSize="30sp"
                android:textAlignment="center"
                android:textColor="@color/lavender"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp">
                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="10:00 - 12:00"
                    android:layout_marginRight="10sp"
                    android:textSize="20sp"
                    android:textColor="@color/lavender"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:id="@+id/EditMorning"
                    android:background="@drawable/lavender_border"
                    android:padding="1dp"
                    android:hint="Активность(-и)"
                    android:gravity="center_horizontal|center_vertical"
                    android:textColor="@color/lavender"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp">
                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="16:00 - 18:00"
                    android:textSize="20sp"
                    android:layout_marginRight="10sp"
                    android:textColor="@color/lavender"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:id="@+id/EditMidDay"
                    android:background="@drawable/lavender_border"
                    android:padding="1dp"
                    android:hint="Активность(-и)"
                    android:gravity="center_horizontal|center_vertical"
                    android:textColor="@color/lavender"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp">
                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="20:00 - 22:00"
                    android:layout_marginRight="10sp"
                    android:textSize="20sp"
                    android:textColor="@color/lavender"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:id="@+id/EditEvening"
                    android:background="@drawable/lavender_border"
                    android:padding="1dp"
                    android:hint="Активность(-и)"
                    android:gravity="center_horizontal|center_vertical"
                    android:textColor="@color/lavender"/>
            </LinearLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/lavender_border"
                android:text="Сохранить"
                android:textSize="18sp"
                android:id="@+id/saveButton"
                android:layout_marginTop="20dp"
                app:cornerRadius = "20dp"/>


        </LinearLayout>

    </androidx.cardview.widget.CardView>
</ScrollView>